{
	"name": "phpgt/cli",
	"description": "Command line interface builder.",
	"keywords": [
		"phpgt",
		"webengine",
		"cli",
		"terminal"
	],

	"require": {
		"php": ">=8.0",
		"ext-json": "*",
		"ext-readline": "*",
		"phpgt/daemon": "^v1.1"
	},
	"require-dev": {
		"phpstan/phpstan": "^v1.10",
		"phpunit/phpunit": "^10.5",
		"phpmd/phpmd": "^2.13",
		"squizlabs/php_codesniffer": "^3.7"
	},

	"license": "MIT",

	"authors": [
		{
			"name": "Greg Bowler",
			"email": "greg.bowler@g105b.com"
		}
	],

	"autoload": {
		"psr-4": {
			"Gt\\Cli\\": "./src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Gt\\Cli\\Test\\": "./test/phpunit"
		}
	},

	"funding": [
		{
			"type": "github",
			"url": "https://github.com/sponsors/PhpGt"
		}
	]
}
